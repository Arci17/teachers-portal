{
  "name": "teachers-portal",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "build": "npm run build:backend && npm run build:public && ts-node corvid-integrations/configure.ts",
    "build:backend": "rm -rf src/backend && tsc --build backend/tsconfig.corvid.json",
    "build:public": "rm -rf src/public && tsc --build frontend/public/tsconfig.corvid.json",
    "lint": "tslint --fix 'backend/**/*.ts' 'frontend/**/*.ts'",
    "test:unit": "mocha -r ts-node/register backend/**/*.spec.ts",
    "test": "npm run test:unit && npm run build",
    "wix:pull": "npx corvid pull --override",
    "wix:editor": "npx corvid open-editor",
    "wix": "npm run wix:pull && npm run test && npm run wix:editor"
  },
  "devDependencies": {
    "@types/chai": "^4.2.14",
    "@types/chai-as-promised": "^7.1.3",
    "@types/lodash": "^4.14.165",
    "@types/mocha": "^8.0.4",
    "@types/sinon-chai": "^3.2.5",
    "chai": "^4.2.0",
    "chai-as-promised": "^7.1.1",
    "corvid-cli": "^0.2.10",
    "corvid-types": "^0.1.113",
    "faker": "^5.1.0",
    "mocha": "^8.2.1",
    "prettier": "^2.1.2",
    "sinon": "^9.2.1",
    "sinon-chai": "^3.5.0",
    "ts-node": "^9.0.0",
    "tslint": "^6.1.1",
    "tslint-config-prettier": "^1.18.0",
    "tslint-no-unused-expression-chai": "^0.1.4",
    "tslint-plugin-prettier": "^2.3.0",
    "typescript": "^4.0.5"
  },
  "dependencies": {
    "bcrypt": "^5.0.0",
    "fastest-validator": "^1.8.0",
    "google-auth-library": "^6.1.3",
    "lodash": "^4.17.20",
    "url-slug": "^2.3.2"
  }
}
